{
    "[rust]": {
        "editor.formatOnSave": true,
    },
    "css.customData": [
        ".vscode/css_custom_data.json"
    ],
    "typescript.tsdk": "node_modules/typescript/lib",
    "actionButtons": {
        "loadNpmCommands": false,
        "commands": [
            {
                "name": "Client lint",
                "command": "time bun run --bun lint-client"
            },
            {
                "name": "Client dev",
                "command": "bun run --bun dev-client"
            },
            {
                "name": "Client build",
                "command": "time NODE_ENV=\"production\" bun run --bun build-client"
            },
            {
                "name": "|",
                "command": ""
            },
            {
                "name": "Server lint",
                "command": "time bun run lint-server"
            },
            {
                "name": "Server dev",
                "command": "bun run dev-server"
            },
            {
                "name": "Server build",
                "command": "bun run build-server"
            },
        ]
    },
}