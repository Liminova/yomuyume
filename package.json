{
  "name": "yomuyume",
  "author": {
    "name": "Liminova",
    "url": "https://github.com/Liminova"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint-client": "eslint --fix --cache ./src/**/*.{ts,vue}",
    "lint-server": "cargo check && cargo fmt && cargo clippy",
    "lint": "concurrently \"pnpm lint-client\" \"pnpm lint-server\"",
    "dev-client": "nuxt dev",
    "dev-server": "cargo run -p yomuyume-server",
    "dev": "concurrently \"pnpm dev-client\" \"pnpm dev-server\"",
    "postinstall": "nuxt prepare",
    "build-server": "cargo build -p yomuyume-server",
    "build-client": "nuxt generate",
    "build-bridge": "sh ./src-rust/build-bridge.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@commitlint/config-conventional": "^19.2.2",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "@pinia/nuxt": "^0.5.1",
    "@types/debounce": "^1.2.4",
    "@types/node": "^20.14.9",
    "@typescript-eslint/parser": "^7.14.1",
    "commitlint": "^19.3.0",
    "concurrently": "^8.2.2",
    "cz-git": "^1.9.3",
    "eslint": "^8.57.0",
    "eslint-plugin-cadence": "github:j1nxie/Cadence",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "husky": "^9.0.11",
    "nuxt": "^3.12.2",
    "sass": "^1.77.6",
    "vue": "^3.4.30",
    "vue-eslint-parser": "^9.4.3",
    "vue-router": "^4.4.0"
  },
  "dependencies": {
    "@material/web": "^1.5.1",
    "debounce": "^2.1.0",
    "fast-blurhash": "^1.1.2",
    "p-debounce": "^4.0.0",
    "swiper": "^11.1.4",
    "vite-plugin-wasm": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    },
    "commitlint": {
      "extends": [
        "@commitlint/config-conventional"
      ]
    }
  }
}