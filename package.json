{
  "name": "yomuyume-client",
  "private": false,
  "author": {
    "name": "Liminova",
    "url": "https://github.com/Liminova"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint-client": "eslint --fix --cache ./src/**/*.{ts,vue}",
    "lint-server": "cargo check && cargo fmt && cargo clippy",
    "lint": "concurrently \"pnpm lint-client\" \"pnpm lint-server\"",
    "dev-client": "nuxt dev",
    "dev-server": "cargo run -p yomuyume-server",
    "dev": "concurrently \"pnpm dev-client\" \"pnpm dev-server\"",
    "postinstall": "nuxt prepare",
    "build-server": "cargo build -p yomuyume-server",
    "build-client": "nuxt generate",
    "build-bridge": "sh ./src-rust/build-bridge.sh"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.6.2",
    "@nuxtjs/tailwindcss": "^6.11.4",
    "@pinia/nuxt": "^0.5.1",
    "@types/debounce": "^1.2.4",
    "@types/node": "^20.11.20",
    "@typescript-eslint/parser": "^7.0.2",
    "ajv": "^8.12.0",
    "commitlint": "^18.6.1",
    "concurrently": "^8.2.2",
    "cz-git": "^1.8.0",
    "eslint": "^8.56.0",
    "eslint-plugin-cadence": "^0.1.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "husky": "^9.0.11",
    "nuxt": "^3.10.3",
    "sass": "^1.71.1",
    "vue": "^3.4.19",
    "vue-eslint-parser": "^9.4.2",
    "vue-router": "^4.3.0"
  },
  "dependencies": {
    "@material/web": "^1.3.0",
    "debounce": "^2.0.0",
    "fast-blurhash": "^1.1.2",
    "p-debounce": "^4.0.0",
    "swiper": "^11.0.6",
    "vite-plugin-wasm": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    },
    "commitlint": {
      "extends": [
        "@commitlint/config-conventional"
      ]
    }
  }
}